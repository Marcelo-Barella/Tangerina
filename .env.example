# Tangerina Discord Bot - Environment Variables Example

# =============================================================================
# VARIÁVEIS OBRIGATÓRIAS
# =============================================================================

# Token do bot do Discord (obrigatório)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# =============================================================================
# VARIÁVEIS DE CONFIGURAÇÃO DO CHATBOT
# =============================================================================

# Provedor de IA a ser usado - 'zhipu' (padrão), 'openai' ou 'gemini'
MODEL_PROVIDER=zhipu

# Chave da API ZhipuAI GLM (obrigatório se MODEL_PROVIDER=zhipu)
ZHIPU_API_KEY=your_zhipu_api_key_here

# Chave da API OpenAI (obrigatório se MODEL_PROVIDER=openai, também usado para Whisper se WHISPER_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here

# Chave da API Google Gemini (obrigatório se MODEL_PROVIDER=gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# VARIÁVEIS OPCIONAIS
# =============================================================================

# URL do webhook do n8n (opcional - para integração com n8n se desejado)
N8N_WEBHOOK_URL=

# Nível de log (opcional, padrão: INFO)
LOG_LEVEL=INFO

# Client ID do Spotify Developer App
SPOTIFY_CLIENT_ID=your_spotify_client_id_here

# Client Secret do Spotify Developer App
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Provedor TTS: 'elevenlabs' ou 'piper' (padrão: elevenlabs)
TTS_PROVIDER=elevenlabs

# Chave da API ElevenLabs para TTS
ELEVEN_API_KEY=your_elevenlabs_api_key_here

# Provedor de transcrição de voz: 'zhipu' (GLM-ASR-2512) ou 'openai' (Whisper local) (padrão: zhipu)
WHISPER_PROVIDER=zhipu

# =============================================================================
# VARIÁVEIS DE MEMÓRIA (ChromaDB)
# =============================================================================

# Habilita memória de longo prazo (opcional, padrão: false)
MEMORY_ENABLED=false

# Caminho para armazenar dados do ChromaDB (opcional, padrão: ./data/chromadb)
CHROMADB_PATH=./data/chromadb

# Nome da coleção ChromaDB (opcional, padrão: tangerina_memory)
CHROMADB_COLLECTION_NAME=tangerina_memory

# Provedor de embeddings - 'sentence_transformers' (padrão) ou 'openai'
EMBEDDING_PROVIDER=openai

# Modelo de embedding OpenAI (opcional, padrão: text-embedding-3-small)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Modelo SentenceTransformer (opcional, padrão: all-MiniLM-L6-v2)
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# Número máximo de memórias a recuperar (opcional, padrão: 10)
MAX_RETRIEVAL_RESULTS=10

# Limiar de similaridade para recuperação (opcional, padrão: 0.7)
MEMORY_SIMILARITY_THRESHOLD=0.7

# Dias de retenção de memórias (opcional, padrão: 30)
MEMORY_RETENTION_DAYS=30
